<%- include dashboard-header %>

    <div class="row">
      <div class="col-md-2">
        <%- include nav-left %>
      </div>

      <div class="col-md-10">
        

        <% if (!events.length) { %>
          <div class="alert alert-info">
            <div class="row">
              <div class="col-md-10">
                <p>Nu exista evenimente.</p>
              </div>
              <div class="col-md-2">
                <a href="/dashboard/<%= orgId %>/event" class="btn btn-primary btn-sm">Eveniment nou</a>
              </div>
            </div>
          </div>
        <% } else { %>

          <h2>
            Events
          </h2>
          <div class="row row-head">
            
            <div class="col-md-3">
              Numele evenimentului
            </div>

            <div class="col-md-3">
              Data
            </div>

            <div class="col-md-1 row-center">
              Disponibile
            </div>

            <div class="col-md-1 row-center">
              Rezervate
            </div>

            <div class="col-md-2 row-center">
              In asteptare
            </div>
            
          </div>
          
          <% events.forEach(function(event){ %>

          <div class="row row-row">

            <div class="col-md-3">
              <h4>
                <a href="/dashboard/<%= orgId %>/event/<%= event._id %>"><%= event.name %></a>

                <a target="_blank" href="/u/<%= org.name %>/event/<%= event._id %>" class="external-link"><i class="fa fa-external-link"></i></a>
              </h4>
            </div>
            
            <div class="col-md-3 row-td">
              <%= moment(event.date).format('LLLL') %>
            </div>

            <div class="col-md-1 row-td row-center">
              <%= event.seats %>
            </div>
            
            <div class="col-md-1 row-td row-center">
              <%= event.invited %>
            </div>

            <div class="col-md-2 row-td row-center">
              <%= event.waiting %>
            </div>

            <div class="col-md-2 row-td-btn">
              <a href="/dashboard/<%= orgId %>/reservations/<%= event._id %>" class="btn btn-default btn-sm">Vezi rezervari</a>
              
              <a title="Sterge eveniment" href="/dashboard/<%= org._id %>/delete-event/<%= event._id %>" class="btn btn-danger btn-sm" onclick="if (!confirm('Sunteti sigur ca doriti stergerea acestui eveniment?')) return false"><i class="fa fa-trash"></i></a>
            </div>

          </div>
 

          <% }) %>

          <a href="/dashboard/<%= org._id %>/event" class="btn btn-primary btn-new-event pull-right">Adauga eveniment nou</a>
        <% } %>
        

      </div>

    </div>


<%- include dashboard-footer %>
