<%- include dashboard-header %>
    <div class="row">

      <div class="col-md-2">
        <%- include nav-left %>
      </div>
      
      <div class="col-md-10">
        <h2>Settings</h2>

        <div class="row">
          <div class="col-md-4">
            <form action="/dashboard/<%= org._id %>/settings" method="post">
            
              <div class="form-group">
                
                <label for="">Organization name</label>

                <input type="text" value="<%= org.name %>" name="orgName" id="" class="form-control" required>

              </div>

              <div class="form-group">
                
                <label for="">Email</label>

                <input type="email" value="<%= user.username %>" name="username" id="" class="form-control" required>

              </div>

              <button class="btn btn-primary" type="submit">Save</button>

            </form>
          </div>
        </div>

      </div>

    </div>


<%- include dashboard-footer %>
