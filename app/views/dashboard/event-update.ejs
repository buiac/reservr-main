                          <label class="switch-light switch-material" onclick="" class="cf">

                          <input type="checkbox" name="toggleMailchimpOptin" <% if (theEvent.toggleMailchimpOptin) { %> checked="true" <% } %>>

                          <strong class="pull-left">
