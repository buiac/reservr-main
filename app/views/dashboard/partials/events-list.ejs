<div class="panel panel-default">
  <div class="panel-heading cf">
    <h2><i class="fa fa-list"></i>Events</h2>
    <a href="/dashboard/EiUObqbCDKIxmWux/event" class="btn preview btn-info btn-xs pull-right" style="margin-top: 8px;">Create New Event</a>
  </div>
  <div class="panel-body no-padding">
    <ul class="users-list events-list">
      
      <% events.forEach(function(event){ %>

      <li class="<% if (theEvent && theEvent._id === event._id) { %> event-active <% } %>">
        
        <div class="name">
          <a href="/dashboard/<%= orgId %>/event/<%= event._id %>">
            <%= event.name || 'No name' %>
          </a>
          <div class="dropdown pull-right">
            <a class="fa fa-cogs" data-toggle="dropdown" href="widgets.html#"></a>

            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
              <li>
                <a href="/dashboard/<%= org._id %>/event/<%= event._id %>">
                  <span class="icon-wrap">
                    <i class="fa fa-edit"></i>
                  </span> 
                  Edit event
                </a>
              </li>
              <li>
                <a href="/dashboard/<%= org._id %>/duplicate-event/<%= event._id %>">
                  <span class="icon-wrap">
                    <i class="fa fa-copy"></i>
                  </span> 
                  Copy event
                </a>
              </li>
              <li>
                <a href="/dashboard/<%= org._id %>/delete-event/<%= event._id %>" class="btn-remove-item" data-message="Are you sure you want to delete this event?">
                  <span class="icon-wrap">
                    <i class="fa fa-trash"></i>
                  </span> 
                  Delete event
                </a>
              </li>
            </ul>
          </div>
        </div>
        <span class="time"><i class="fa fa-clock-o"></i>
          <%= moment(event.date).format('dddd') %>
          
          <%= moment(event.date).format('DD') %>
          
          <%= moment(event.date).format('MMM') %>,
          
          <%= moment(event.date).format('HH:mm') %>,
          
          <%= moment(event.date).format('YYYY') %>
        </span>

        <span>
          <i class="fa fa-ticket"></i>
          <a href="/dashboard/<%= orgId %>/reservations/<%= event._id %>"><%= event.invited %> seats reservd</a>
            
            
              of <%= event.seats %>.
            
            
              <%= event.waiting %> waiting.
        </span>
        
      </li>

      <% }) %>
      
    </ul>
  </div>
</div>