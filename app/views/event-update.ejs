        <div class="event-group">
          

          <span class="event-placeholder">
            <i class="fa fa-money"></i>

            Ticket price (<a class="event-free" data-toggle="tooltip" title="Click here if it's a free event">It's free</a>)

          </span>

          <div class="event-input">
            
            <i class="fa fa-money"></i>

            <input type="text" class="form-control" name="" value="" min="0">

          </div>

          <div class="event-group-action">
            
            <a class="btn btn-sm btn-primary btn-event-save">Save</a>

            <a class="event-group-cancel event-cancel">Cancel</a>
            
          </div>

        </div>

        <div class="event-group event-seats">

          <span class="event-placeholder">

            <i class="icomoon icon-chair"></i>

            Number of seats

          </span>

          <div class="event-input">

            <i class="icomoon icon-chair"></i>

            <input type="number" class="form-control" name="" value="">

          </div>

          <div class="event-group-action">
            
            <a class="btn btn-sm btn-primary btn-event-save">Save</a>

            <a class="event-group-cancel event-cancel">Cancel</a>
            
          </div>
          
        </div>

        <div class="event-group event-date">
          
          <span class="event-placeholder">
            
            <i class="fa fa-calendar-o"></i>

            Date &amp; Time

          </span>

          <div class="event-input">
            
            <i class="fa fa-calendar-o"></i>

            <input type="text" class="form-control" name="" value="">

          </div>

          <div class="event-group-action">
            
            <a class="btn btn-sm btn-primary btn-event-save">Save</a>

            <a class="event-group-cancel event-cancel">Cancel</a>
            
          </div>

        </div>

        <div class="event-group">

          <span class="event-placeholder">

            <i class="fa fa-map-o"></i>

            Location

          </span>

          <div class="event-input">
            
            <i class="fa fa-map-o"></i>

            <input type="text" class="form-control" name="" value="">

          </div>
          
        </div>

        <div class="event-publish">
          
          <div class="event-link-wrap">
            
            <span>Your unique event link is ready:</span>

            <a href="http://localhost:8081/event-page.html" target="_blank" class="event-link"><i class="fa fa-link"></i> http://www.reservr.net/u/reactor/event/EJf8JVa3GQ7KNaCs</a>

          </div>

          <a class="btn btn-lg btn-publish btn-primary">Publish event</a>

          <div class="event-save">

