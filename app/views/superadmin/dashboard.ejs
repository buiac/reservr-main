<%- include header %>
  <style>
    table tr:hover{
      background: rgba(0,0,0, .1);
    }
  </style>

  <div class="container">
    <h1>Dashboard</h1>
  
    <h2>Users  <%= users.length %></h2>

    <table class="tablesorter sa-table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Orgname</th>
          <th>Date</th>
          <th></th>
        </tr>
      </thead>


    <% users.forEach(function(user){ %>
      
      <tr>
        <td><%= user.username %></td>
        <td><a href="/u/<%= user.orgName %>" target="_blank"><%= user.orgName %></a></td>
        <td><%= moment(user.timecreated).format() %></td>
        <td><a href="/sa/delete-user/<%= user._id %>" class="btn btn-xs btn-danger btn-remove-item" data-message="Are you sure you want to delete this <%= user.username %> user?">Delete User</a></td>
      </tr>
    
    <% }) %>

    </table>

  </div>

<%- include footer %>