<%- include header %>
  
  <div class="container">
    <h1>Dashboard</h1>
  
    <h2>Users  <%= users.length %></h2>

    <table class="table">
      <thead>
        <tr>
          <th>Username</th>
          <th>Date</th>
          <th></th>
        </tr>
      </thead>


    <% users.forEach(function(user){ %>
      
      <tr>
        <td><%= user.username %></td>
        <td><%= moment(user.timecreated).format() %></td>
        <td><a href="/sa/delete-user/<%= user._id %>" class="btn btn-danger btn-remove-item" data-message="Are you sure you want to delete this user?">Delete User</a></td>
      </tr>
    
    <% }) %>

    </table>

    <h2>Orgs</h2>
    
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>


    <% orgs.forEach(function(org){ %>
      
      <tr>
        <td><%= org.name %></td>
        <td><a href="/sa/delete-org/<%= org._id %>" class="btn btn-danger btn-remove-item" data-message="Are you sure you want to delete this org?">Delete Org</a></td>
      </tr>
    
    <% }) %>

    </table>
  </div>

<%- include footer %>