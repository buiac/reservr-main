<% var theEvent = '' %>
<%- include header %>
  
  <div class="rzv-lightbox">
    <h2>Events archive</h2>

    <table class="table" style="position:relative; z-index: 3;">
      
        <% archiveEvents.forEach(function(event, index){ %>
          
          <tr style="position:relative; z-index: <%= archiveEvents.length - index %>"> 
            <td>
              <p><%= event.name %></p>
              <a href="/dashboard/<%= org._id %>/reservations/<%= event._id %>">reservations</a>
            </td>

            <td>
              <%= moment(event.date).format('LLLL') %>
            </td>

            <td style="position:relative">
              <div class="event-menu">
                
                <a href="" class="event-menu-button ">
                  <span></span>
                  <span></span>
                  <span></span>
                </a>

                <ul class="event-menu-dropdown list-unstyled">
                  <li>
                    
                    <a href="/dashboard/<%= orgId %>/event/<%= event._id %>">
                      <span class="icon-wrap">
                        <i class="fa fa-edit"></i>
                      </span> 
                      Edit event
                    </a>
                  </li>
                  <li>
                    <a href="/dashboard/<%= org._id %>/duplicate-event/<%= event._id %>">
                      <span class="icon-wrap">
                        <i class="fa fa-copy"></i>
                      </span> 
                      Copy event
                    </a>
                  </li>
                  <li>
                    <a href="/dashboard/<%= org._id %>/delete-event/<%= event._id %>" class="btn-remove-item" data-message="Are you sure you want to delete this event?">
                      <span class="icon-wrap">
                        <i class="fa fa-trash"></i>
                      </span> 
                      Delete event
                    </a>
                  </li>
                </ul>
              </div>
            </td>
          </tr>

        <% }) %>
      
    </table>
    

    <ul class="pagination pull-right" >
      <% for(var i = 0; i < pages; i++){ %>
        <li <% if (parseInt(page) === i) { %> class="active" <% } %>><a href="/dashboard/<%= org._id %>/archive/<%= i %>"><%= i+1 %></a></li>
      <% } %>
    </ul>
    
  </div>
  
<%- include footer %>
